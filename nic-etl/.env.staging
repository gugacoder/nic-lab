# NIC ETL Pipeline - STAGING Environment
# Ambiente de homologação/testes

# Environment
ENVIRONMENT=staging

# Pipeline Mode Control
# Em staging, permitimos mock mas com aviso
ALLOW_MOCK_MODE=true

# GitLab Configuration
GITLAB_URL=http://gitlab.processa.info/nic/documentacao/base-de-conhecimento.git
GITLAB_ACCESS_TOKEN=${GITLAB_ACCESS_TOKEN}  # Deve ser definido como variável de ambiente
GITLAB_PROJECT_PATH=nic/documentacao/base-de-conhecimento
GITLAB_BRANCH=staging  # Branch de staging
GITLAB_FOLDER_PATH=30-Aprovados

# Qdrant Configuration
QDRANT_URL=https://qdrant.codrstudio.dev/
QDRANT_API_KEY=${QDRANT_API_KEY}  # Deve ser definido como variável de ambiente
QDRANT_COLLECTION=nic_staging  # Coleção separada para staging

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=24

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Pipeline Configuration
MAX_CONCURRENT_DOCS=5
MAX_MEMORY_GB=8.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/nic_etl_pipeline_staging.log

# Qdrant Collection Settings
QDRANT_VECTOR_SIZE=1024
QDRANT_DISTANCE_METRIC=COSINE

# Monitoring & Alerts
ENABLE_MONITORING=true
ENABLE_ALERTS=false  # Sem alertas em staging