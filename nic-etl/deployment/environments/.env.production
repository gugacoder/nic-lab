# Production Environment Configuration for NIC ETL Pipeline

# Environment Settings
ENVIRONMENT=production

# GitLab Configuration
GITLAB_URL=http://gitlab.processa.info/nic/documentacao/base-de-conhecimento.git
GITLAB_ACCESS_TOKEN=your_production_GITLAB_ACCESS_TOKEN_here
GITLAB_BRANCH=main
GITLAB_TARGET_FOLDER=30-Aprovados

# Qdrant Configuration
QDRANT_URL=https://qdrant.codrstudio.dev/
QDRANT_API_KEY=your_production_qdrant_api_key_here
QDRANT_COLLECTION=nic

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Pipeline Configuration
MAX_CONCURRENT_DOCS=5
MAX_MEMORY_GB=8.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/nic_etl_production.log

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Security Settings
JUPYTER_TOKEN=your_secure_jupyter_token_here