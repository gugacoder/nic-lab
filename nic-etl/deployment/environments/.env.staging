# Staging Environment Configuration for NIC ETL Pipeline

# Environment Settings
ENVIRONMENT=staging

# GitLab Configuration
GITLAB_URL=http://gitlab.processa.info
GITLAB_ACCESS_TOKEN=your_staging_gitlab_token_here
GITLAB_PROJECT_PATH=nic/documentacao/base-de-conhecimento
GITLAB_BRANCH=main
GITLAB_FOLDER_PATH=30-Aprovados

# Qdrant Configuration
QDRANT_URL=https://qdrant-staging.codrstudio.dev/
QDRANT_API_KEY=your_staging_qdrant_api_key_here
QDRANT_COLLECTION=nic_staging

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=16

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Pipeline Configuration
MAX_CONCURRENT_DOCS=3
MAX_MEMORY_GB=4.0

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE_PATH=/app/logs/nic_etl_staging.log

# Monitoring Configuration
GRAFANA_PASSWORD=staging_password

# Security Settings
JUPYTER_TOKEN=staging_token